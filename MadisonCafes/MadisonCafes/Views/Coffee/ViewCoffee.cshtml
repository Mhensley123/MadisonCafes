@model Coffee

<h3>@Model.Cafe Information</h3>
<div class="display-field">
    <p>
        @* <img src="@Url.Content(Model.Photo)" alt="@Model.Description" /> *@
        <img width="150" height="150" src="~/Images/@Model.Photo" alt="@Model.Description" />
    </p>

</div>


<table class="table">
    <tr>
        <th>CoffeeID</th>
        <th>Cafe</th>
        <th>Location</th>
        <th>Late_Night_Spots</th>
        <th>Starting_Price</th>
        <th>Ambience</th>
        <th>Wifi</th>
        <th>Tipping</th>
        <th>Featured_Cafe</th>
        <th>Photo</th>
        <th>Description</th>
    </tr>
    <tr>
        <td>@Model.CoffeeID</td>
        <td>@Model.Cafe</td>
        <td>@Model.Location</td>
        <td>@Model.Late_Night_Spots</td>
        <td>@Model.Starting_Price</td>
        <td>@Model.Ambience</td>
        <td>@Model.Wifi</td>
        <td>@Model.Tipping</td>
        <td>@Model.Featured_Cafe</td>
        @* <td>@Model.Photo</td> *@
        <td>
            <img width="150" height="150" src="~/Photos/@Model.Photo" />
        </td>
        <td>@Model.Description</td>
    </tr>

</table>


<div style="display: block">
    <a href="/Coffee/UpdateCoffee/@Model.CoffeeID">Update this Coffee</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteCoffee", "Coffee", "Post"))
    {
        <input type="hidden" asp-for="CoffeeID" value="@Model.CoffeeID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this coffee" />
    }
</div>


